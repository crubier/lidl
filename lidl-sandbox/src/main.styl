.block-enter {
transform:scale(0.01,0.01);
}

.block-enter.block-enter-active {
  transform:scale(1,1);
  transition: transform 300ms ease-in;
}

.block-leave {
  transform:scale(1,1);
}

.block-leave.block-leave-active {
  transform:scale(0.01,0.01);
  transition: transform 300ms ease-in;
}

.block-appear {
  transform:scale(0.01,0.01);
}

.block-appear.block-appear-active {
  transform:scale(1,1);
  transition: transform 300ms ease-in;
}
