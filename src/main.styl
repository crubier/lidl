 @import "reset"



 html,body {
    font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
    font-weight: 300;
    height: 100%;
    width:100%;
    overflow:hidden;
 }


 div.icons {
   vertical-align: middle;
   overflow:auto;

   margin-top:15px;
   margin-bottom:15px;

 }

 textarea {
   width:100%;
   height:200px;
   border:none;
   margin:0;
   resize: none;
   box-sizing: border-box;
   overflow:auto;
   font-family:"Courier New", Courier, monospace;
   background-color:rgba(255,255,255,0.5);
   font-size: 13pt;
 }

 textarea:focus, input:focus{
    outline: 0;
}

 .error{
  background-color:rgba(249, 45, 0, 0.42);
 }

.warning{
    background-color:rgba(250, 216, 37, 0.49);
}
 .info{
    background-color:rgba(27, 84, 249, 0.38);
 }

span {
  display: inline-block;
  vertical-align: middle;
  text-align:center;
  line-height:normal;
}


